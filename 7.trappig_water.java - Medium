package JAVA;

public class trappig_water {
	
	public static void trappigwater(int numbers[]) {
		
		int n = numbers.length;
    // calculate leftmax boundary - array
		int leftmax[] = new int[n];
		leftmax[0] = numbers[0];
		for(int i=1;i<n;i++) {
			leftmax[i] = Math.max(leftmax[i-1], numbers[i]);
		}
		// calculate rightmax boundary - array
		int rightmax[] = new int[n];
		rightmax[n-1] = numbers[n-1];
		for(int i=n-2;i >= 0 ;i--) {
			rightmax[i] = Math.max(rightmax[i+1], numbers[i]);
		}
		
		int waterlevel,trapedwater=0;
		for (int i=0;i<n;i++) {
			waterlevel = Math.min(leftmax[i], rightmax[i]); // formula
			trapedwater += waterlevel - numbers[i]; // formula
		}
		
		System.out.println(trapedwater);
		
	}
	
	public static void main(String[] args) {
		
		int data[] = {1,2,3,9,3,2,1};
		trappigwater(data);
	}

}
